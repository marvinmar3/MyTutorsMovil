<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".activities.DetalleTemaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:navigationIcon="@drawable/ic_back"
            app:title="Detalle del Tema"
            app:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Badge de tipo -->
        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFERTA"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:background="@drawable/badge_oferta"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre del tema -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Estructuras de Datos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvTipo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card de información de materia -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvNombre">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_book"
                    android:padding="8dp"
                    android:background="@drawable/circle_background"
                    app:tint="@color/primary"
                    android:contentDescription="Materia" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Materia"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/tvMateria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Programación II"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvLabelDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardMateria"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ayuda con listas enlazadas, pilas, colas y árboles binarios. Tengo experiencia de 2 años programando y he aprobado la materia con sobresaliente."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card de información del creador -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCreador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcion">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Foto de perfil -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivFotoCreador"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_person"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvNombreCreador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvCarreraCreador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingeniería en Sistemas"
                        android:textSize="13sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvRolCreador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tutor"
                        android:textSize="12sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnChat"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_chat"
                    android:background="@drawable/circle_background_primary"
                    app:tint="@android:color/white"
                    android:contentDescription="Iniciar chat" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones de acción -->
        <LinearLayout
            android:id="@+id/llBotones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardCreador"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Botón Solicitar (visible si no es mi tema) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSolicitar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Solicitar Tutoría"
                android:textSize="16sp"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart" />

            <!-- Botón Reportar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReportar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Reportar tema"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/error"
                android:layout_marginTop="12dp"
                app:cornerRadius="8dp"
                app:strokeColor="@color/error"
                app:icon="@drawable/ic_report"
                app:iconTint="@color/error"
                app:iconGravity="textStart" />

            <!-- Botones para el dueño del tema -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Editar tema"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Eliminar tema"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/error"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cornerRadius="8dp"
                app:strokeColor="@color/error"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error"
                app:iconGravity="textStart" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>